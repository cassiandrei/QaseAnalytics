# ===========================================
# QaseAnalytics Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
DATABASE_URL="postgresql://qase:qase@localhost:5432/qaseanalytics?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Qase API
QASE_API_TOKEN="your-qase-api-token"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# Auth (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRES_IN="7d"

# App
NODE_ENV="development"
API_PORT=3001
WEB_PORT=3000

# Optional: BYOK (Bring Your Own Key)
# Users can provide their own OpenAI key
ENCRYPTION_KEY="your-encryption-key-for-user-keys"
