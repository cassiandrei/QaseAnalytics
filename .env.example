# ===========================================
# QaseAnalytics Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL) - Port 5433 to avoid conflicts
DATABASE_URL="postgresql://qase:qase@localhost:5433/qaseanalytics?schema=public"

# Redis - Port 6380 to avoid conflicts
REDIS_URL="redis://localhost:6380"

# Invoice Database (ERP - read-only)
INVOICE_DATABASE_URL="postgresql://user:password@host:5432/database"
INVOICE_DB_ENCRYPTION_KEY="your-invoice-db-encryption-key-min-32-chars"

# Qase API
QASE_API_TOKEN="your-qase-api-token"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# Auth (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRES_IN="7d"

# App
NODE_ENV="development"
API_PORT=3001
WEB_PORT=3000

# Optional: BYOK (Bring Your Own Key)
# Users can provide their own OpenAI key
ENCRYPTION_KEY="your-encryption-key-for-user-keys"
